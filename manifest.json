{
   "manifest_version": 2,

   "name": "Recently Closed Tabs",
   "version": "1.3.0.2",
   "description": "Manage your recently closed tabs.",

   "permissions": [ "tabs" ],

   "background": {
      "page": "background.html"
   },

   "options_page": "options.html",

   "browser_action": {
      "default_icon": "images/RecentlyClosedTabs-48x48.png",
      "default_title": "Recently Closed Tabs",
      "default_popup": "popup.html"
   },

   "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

   "icons": {
      "128": "images/RecentlyClosedTabs-128x128.png",
      "48": "images/RecentlyClosedTabs-48x48.png",
      "16": "images/RecentlyClosedTabs-16x16.png"
   }
}
